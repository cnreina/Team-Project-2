<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../includes/headInclude.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigationInclude.ejs') %>
            <main>
                <% if (tasks.length > 0) { %>
                    <div class="tasklistContainer_div">
                    <% for (let task of tasks) { %>
                        <div class="tasklist_div">
                            <ul class="tasklist_ul">
                                <li class="tasklist_li">
                                    <h3><%= task.title %></h3>
                                </li>
                                <li class="tasklist_li"><p>Time: <%= task.totaltime %></p></li>
                                <li class="tasklist_li"><a class="taskButton" href="/user/edit-task/<%= task._id %>">Edit</a></li>
                                <li class="tasklist_li">
                                    <input type="hidden" value="<%= task._id %>" name="taskId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="taskButton" type="button" onclick="deleteTask(this)">Delete</button>
                                </li>
                                <li class="tasklist_li"><button class="taskButton" type="button"onclick="punchIn(this)">Punch-In</button></li>
                                <li class="tasklist_li"><button class="taskButton" type="button"onclick="punchOut(this)">Punch-Out</button></li>
                            </ul>
                        </div>
                    <% } %>
                    </div>
                <% } else { %>
                    <h1>No tasks found</h1>
                <% } %>
            </main>
            <%- include('../includes/javascriptInclude.ejs') %>
    </body>
</html>
