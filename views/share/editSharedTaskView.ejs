<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../includes/headInclude.ejs') %>
    </head>
    <body>
    <%- include('../includes/navigationInclude.ejs') %>
        <main>
            <% if (errorMessage) { %>
                <div class="user-message user-message--error"><%= errorMessage %></div>
            <% } %>
            <form class="taskform" action="/share/edit-task" method="POST" enctype="multipart/form-data">
                <div class="form-control">
                    <label for="title">Title</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid' : '' %>"
                        type="text" 
                        name="title" 
                        id="title" 
                        value="<% if (!hasError) { %><%= task.title %><% } %>">
                </div>
                <div class="form-control">
                    <label for="timestart">Time Start</label>
                    <input type="text" name="timestart" id="timestart" value="<% if (!hasError) { %><%= task.timestart %><% } %>">
                </div>
                <div class="form-control">
                    <label for="totaltime">Total Time</label>
                    <input 
                        class="<%= validationErrors.find(e => e.param === 'totaltime') ? 'invalid' : '' %>"
                        type="number" 
                        name="totaltime" 
                        id="totaltime" 
                        step="0.01" 
                        value="<% if (!hasError) { %><%= task.totaltime %><% } %>">
                </div>
                <div class="form-control">
                    <label for="description">Description</label>
                    <textarea 
                        class="<%= validationErrors.find(e => e.param === 'description') ? 'invalid' : '' %>"
                        name="description" 
                        id="description" 
                        rows="5"><% if (!hasError) { %><%= task.description %><% } %></textarea>
                </div>
                <input type="hidden" value="<%= masterTaskId %>" name="masterTaskId">
                <input type="hidden" value="<%= task._id %>" name="taskId">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn" type="submit">Update Task</button>
            </form>
        </main>
        <%- include('../includes/javascriptInclude.ejs') %>
    </body>
</html>