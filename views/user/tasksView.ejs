<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../includes/headInclude.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigationInclude.ejs') %>
        <main>
            <% if (tasks.length > 0) { %>
                <% for (let task of tasks) { %>
                    <div class="tasklist_div">
                        <ul class="tasklist_ul">
                            <li class="tasklist_li"><h3><%= task.title %></h3></li>
                            <% if (task.timeStart) { %><li class="timetracker_li"> <h3>Active</h3></li><% } %>
                            <li class="tasklist_li"><p>Time: H: <%= task.hours %> M: <%= task.minutes %></p></li>
                            <li class="tasklist_li"><a href="/user/edit-task/<%= task._id %>" class="btn">Edit</a></li>
                            <li class="tasklist_li">
                                <form action="/user/archive-task" method="POST">
                                    <input type="hidden" value="<%= task._id %>" name="taskId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn" type="submit">Archive</button>
                                </form>
                            </li>
                            <li class="tasklist_li">
                                <form action="/user/punchIn" method="POST">
                                    <button class="btn" type="submit">Punch In</button>
                                    <input type="hidden" value="<%= task._id %>" name="taskId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                </form>
                            </li>
                            <li class="tasklist_li">
                                <form action="/user/punchOut" method="POST">
                                    <button class="btn" type="submit">Punch Out</button>
                                    <input type="hidden" value="<%= task._id %>" name="taskId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                </form>
                            </li>
                        </ul>
                    </div>
                <% } %>
            <% } else { %>
                <h1>No tasks found</h1>
            <% } %>
        </main>
        <%- include('../includes/javascriptInclude.ejs') %>
    </body>
</html>